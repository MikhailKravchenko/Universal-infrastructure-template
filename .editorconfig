# EditorConfig — единый стиль кода для разных редакторов
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
